action (FilterMovieWithGenreAndThOSM) {
  description (filter movie with genre input)
  type (Search)
  collect {
    input (theaterOrderedScheduleWithMovie) {
      type (TheaterOrderedScheduleWithMovie)
      min (Required) max (One)
    }
    input (genreEnum) {
      type (GenreEnum)
      min (Required) max (One)
    }
    input(exceptExpression){
      type(ExceptExpression)
      min (Optional) max (One)
    }
  }
  output (TheaterOrderedScheduleWithMovie) {
    throws {
      error (NoDataError) {
        on-catch {
          halt {
            dialog {
              template-macro (NoDataError)
            }
          }
        }
      }
    }
  }
}