layout-macro-def (title-for-theaterSchedule) {
  params {
    param (theater) {
      type (Theater)
      min (Required) max (One)
    }
  }
  content {
    hbox {
      content {
        vbox {
          halign (Start)
          content {
            single-line {
              image {
                shape (Square)
                style (Title_S)
                url ("#{value(theater.theaterInfo.iconUri)}")
              }
              spacer
              text {
                style (Title_XS)
                value {
                  template ("#{value(theater.theaterInfo.theaterName)}")
                }
              }
            }
          }
        }
        vbox { 
          halign (End)
          valign (Bottom)
          content {
            single-line {
              text{
                style (Detail_L_Soft)
                value(300m) // 거리로 수정 요망
              }
            }
          }
        }
      }
    }
  }
}